<style>
    .ember-cli-g-map {
        height: 400px;
    }
</style>
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Traffic</h3>

        <div class="box-tools">
          {{#gmap-search refreshPlace='refreshPlace' elementId='searchPlaceText'}}{{/gmap-search}}
        </div>
    </div>
    <div class="box-body">
      {{g-maps name="marker-map" lat=lat lng=lng zoom=zoom markers=markersForDisplay}}
    </div>
    <div class="box-footer clearfix">
        <div class="box-tools">
            <div class="form-group pull-right">
              {{select-time lastminutes=lastminutes}}
            </div>
        </div>
    </div>
</div>