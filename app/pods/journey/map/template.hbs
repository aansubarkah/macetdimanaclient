<style>
.ember-cli-g-map {
    height: 400px;
}
</style>
<div class="box">
    <div class="box-header">
        <div class="col-md-4 pull-left">
            <h3 class="box-title">Direction{{format-lastminutes lastminutes}}</h3>
        </div>
        <div class="col-md-4 pull-right">
            <div class="box-tools">
                <button class="btn btn-default pull-right" type="button" {{action 'refreshPage'}}>Get Direction Again</button>
            </div>
        </div>
    </div>
    <div class="box-body">
        {{g-maps name="marker-map" lat=lat lng=lng zoom=zoom routes=routesForDisplay markers=markersForDisplay}}
    </div>
    <div class="box-footer clearfix">
        <div class="col-md-4 pull-right">
            <div class="box-tools">
                <div class="form-group pull-right">
                    {{#gmap-search refreshPlace='refreshPlace' elementId='searchPlaceText'}}{{/gmap-search}}
                </div>
            </div>
        </div>
    </div>
</div>
